<% if @question.errors.present? %>
  <% @question.errors.full_messages.each do |message| %>
    $('.question-errors').html('<%= j message %>');
  <% end %>
<% else %>
  $('.flash').html('<%= j render "shared/flash_messages" %>');
  $('#question-title').text('<%= j @question.title %>');
  $('#question-body').text('<%= j @question.body %>');
  $('.edit-question').show()
  $('form#edit-question-' + '<%= j @question.id %>').addClass('hidden')
<% end %>
